// password_loop.c
#include <stdio.h>
#include <string.h>

int main(void) {
    const char correct[] = "1234";
    char input[100];

    do {
        printf("Enter password: ");
        if (scanf("%99s", input) != 1) return 1;
        if (strcmp(input, correct) != 0) {
            printf("Incorrect password. Try again.\n");
        }
    } while (strcmp(input, correct) != 0);

    printf("Access Granted\n");
    return 0;
}
