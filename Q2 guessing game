// number_guessing_game.c
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(void) {
    int secret, guess, attempts = 0;
    srand((unsigned)time(NULL));
    secret = (rand() % 20) + 1; // 1..20

    printf("Guess the secret number (1-20). Enter 0 to quit.\n");
    while (1) {
        printf("Enter your guess: ");
        if (scanf("%d", &guess) != 1) break;
        if (guess == 0) { printf("Quitting. The secret was %d.\n", secret); break; }
        attempts++;
        if (guess == secret) {
            printf("Congratulations â€” the guess is equal to the secret number!\n");
            printf("You took %d attempt%s.\n", attempts, attempts==1 ? "" : "s");
            break;
        } else if (guess < secret) {
            printf("Too low. Try again.\n");
        } else {
            printf("Too high. Try again.\n");
        }
    }
    return 0;
}
